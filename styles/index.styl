.scroll {
  line-height: 1.2;
  height: 90%;
  overflow-y: scroll;
  overflow-x: hidden;
  padding-right: 10px;
}
/* width */
::-webkit-scrollbar {
  width: 4px;
}

/* Track */
::-webkit-scrollbar-track {
  background: #9999; 
}
 
/* Handle */
::-webkit-scrollbar-thumb {
  background: #888; 
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #555; 
}
